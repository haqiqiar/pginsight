@model PETROKIMIA.Models.MonitoringTLViewModels.Rekomendasi
@{
    ViewBag.Title = "InputRekomendasi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Input Rekomendasi
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/MonitoringTL/index"><i class="fa fa-dashboard"></i> MonitoringTl</a></li>
        <li><a href="/MonitoringTL/temuan"><i class="fa fa-dashboard"></i> Rekomendasi</a></li>
        <li class="active">Input Rekomendasi</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Form Data Rekomendasi</h3>
                </div>
                <div class="box-body">
                    <section class="card box-typical-full-height">
                        <div class="card-block">
                            @using (Html.BeginForm("InputRekomendasi", "MonitoringTL", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "editForm" }))
                            {
                                <div class="form-group row">
                                    @Html.LabelFor(m => m.KD_TEMUAN, new { @class = "col-sm-2 form-control-label" })
                                    <div class="col-md-10">
                                        @*@Html.TextBoxFor(m => m.NO_LHA, new { @class = "form-control" })*@
                                        @Html.DropDownListFor(m => m.KD_TEMUAN, Model.getTemuan, new { @class = "form-control select2" })
                                        @Html.HiddenFor(m => m.KD_TEMUAN)


                                        @Html.ValidationMessageFor(m => m.KD_TEMUAN, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(m => m.KD_REKOM, new { @class = "col-sm-2 form-control-label" })
                                    <div class="col-sm-10">
                                        <p class="form-control-static">
                                            @Html.TextBoxFor(m => m.KD_REKOM, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.KD_REKOM, "", new { @class = "text-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(m => m.ISI_REKOM, new { @class = "col-sm-2 form-control-label" })
                                    <div class="col-sm-10">
                                        <p class="form-control-static">
                                            @Html.TextAreaFor(m => m.ISI_REKOM, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ISI_REKOM, "", new { @class = "text-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(m => m.TINDAKLANJUT, new { @class = "col-sm-2 form-control-label" })
                                    <div class="col-sm-10">
                                        <p class="form-control-static">
                                            @Html.TextAreaFor(m => m.TINDAKLANJUT, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TINDAKLANJUT, "", new { @class = "text-danger" })
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(m => m.STATUS, new { @class = "col-sm-2 form-control-label" })
                                    <div class="col-md-10">
                                        @*@Html.TextBoxFor(m => m.NO_LHA, new { @class = "form-control" })*@
                                        @Html.DropDownListFor(m => m.STATUS, Model.getSatatus, new { @class = "form-control" })
                                        @Html.HiddenFor(m => m.STATUS)


                                        @Html.ValidationMessageFor(m => m.STATUS, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    @Html.LabelFor(m => m.ID_DEPT, new { @class = "col-sm-2 form-control-label" })
                                    <div class="col-md-10">
                                        @*@Html.TextBoxFor(m => m.NO_LHA, new { @class = "form-control" })*@
                                        @Html.DropDownListFor(m => m.ID_DEPT_ARR, Model.getDepartmen, new { @class = "form-control select2", multiple = "multiple" })
                                        @Html.HiddenFor(m => m.ID_DEPT)


                                        @Html.ValidationMessageFor(m => m.ID_DEPT_ARR, "", new { @class = "text-danger"})
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-inline btn-success">Tambah</button>

                            }

                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>


