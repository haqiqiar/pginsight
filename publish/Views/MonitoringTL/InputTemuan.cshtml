@model PETROKIMIA.Models.MonitoringTLViewModels.Temuan
@{
    ViewBag.Title = "InputTemuan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Input Temuan
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/MonitoringTL/index"><i class="fa fa-dashboard"></i> MonitoringTl</a></li>
        <li><a href="/MonitoringTL/temuan"><i class="fa fa-dashboard"></i> Temuan</a></li>
        <li class="active">Input Temuan</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Form Data Temuan</h3>
                </div>
                <div class="box-body">
                    @Html.ValidationMessage("Error")
                    @Html.ValidationMessage("Sukses")
                    <section class="card box-typical-full-height">
                        <div class="card-block">
                            @using (Html.BeginForm("InputTemuan", "MonitoringTL", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "editForm" }))
            {
                <div class="form-group row">
                    @Html.LabelFor(m => m.NO_LHA, new { @class = "col-sm-2 form-control-label" })
                    <div class="col-md-10">
                        @*@Html.TextBoxFor(m => m.NO_LHA, new { @class = "form-control" })*@
                        @Html.DropDownListFor(m => m.NO_LHA, Model.getNamaAudit, new { @class = "form-control" })
                        @Html.HiddenFor(m => m.NO_LHA)


                        @Html.ValidationMessageFor(m => m.NO_LHA, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.KD_TEMUAN, new { @class = "col-sm-2 form-control-label" })
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            @Html.TextBoxFor(m => m.KD_TEMUAN, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.KD_TEMUAN, "", new { @class = "text-danger" })
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.ISI_TEMUAN, new { @class = "col-sm-2 form-control-label" })
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            @Html.TextAreaFor(m => m.ISI_TEMUAN, new { @class = "form-control", @placeholder = "Temuan" })
                            @Html.ValidationMessageFor(m => m.ISI_TEMUAN, "", new { @class = "text-danger" })
                        </p>
                    </div>
                </div>
                <button type="submit" class="btn btn-inline btn-success">Tambah</button>

}

                        </div>
                    </section>
                </div>
                </div>
            </div>
        </div>
</section>

