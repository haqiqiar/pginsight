
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="page-center">
    <div class="page-center-in">
        <div class="container-fluid">
            <form class="sign-box">
                <div class="sign-avatar">
                    <img src="~/Content/build/img/logo_petrokimia.png" alt="">
                </div><br />
                <header class="sign-title">INSIGHT</header>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="ID User" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" />
                </div>
                <div class="form-group">
                    <div class="checkbox float-left">
                        <input type="checkbox" id="signed-in" />
                        <label for="signed-in">Keep me signed in</label>
                    </div>
                   
                </div>
                <button type="submit" class="btn btn-rounded btn" ><a style="color:#fff" href="/Dashboard/index"> Sign in</a></button>
                <p class="sign-note">&copy; @DateTime.Now.Year - PT.PETROKIMIA GRESIK</p>
                <!--<button type="button" class="close">
                    <span aria-hidden="true">&times;</span>
                </button>-->
            </form>
        </div>
    </div>
</div><!--.page-center-->
